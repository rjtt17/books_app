<p id="notice"><%= notice %></p>

<h1><%= t(:Books) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:Title) %></th>
      <th><%= t(:Memo) %></th>
      <th><%= t(:Author) %></th>
      <th><%= t(:Picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('button.show'), book %></td>
        <td><%= link_to t('button.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('button.destroy'), book, method: :delete, data: { confirm: t('notice.confirm_message') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  t('button.new_book'), new_book_path %>
