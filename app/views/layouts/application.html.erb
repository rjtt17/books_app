<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="navbar-text">
      <% if user_signed_in? %>
    <%=t('text.login_name') %> <strong><%= current_user.name %></strong>
    <%= link_to t('button.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
    <%= link_to t('button.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
    <hr>
    <% end %>
    </p>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>
  </body>
</html>
